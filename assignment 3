import java.util.Scanner;

public class BinarySearchExample {
    public static void main(String[] args) {
        Scanner inputScanner = new Scanner(System.in);
        int size = inputScanner.nextInt();
        int[] elements = new int[size];

        for (int i = 0; i < size; i++) {
            elements[i] = inputScanner.nextInt();
        }
        
  
        int targetNumber = inputScanner.nextInt();

        int comparisonCount = performBinarySearch(elements, targetNumber);


        System.out.println(comparisonCount);

        inputScanner.close();
    }

    public static int performBinarySearch(int[] elements, int target) {
        int low = 0;
        int high = elements.length - 1;
        int comparisons = 0;

        while (low <= high) {
            int middle = low + (high - low) / 2;
            comparisons++;

            if (elements[middle] == target) {
                return comparisons;
            } else if (elements[middle] < target) {
                low = middle + 1;
            } else {
                high = middle - 1;
            }
        }

        return -1; // Target not found
    }
}
